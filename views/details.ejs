<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
</head>
<div id="detail" :style="setBody">
    <br>
    <h1 :style="styleText">Investment's Detail</h1>
    <h3 :style="setH3"><em>Enter the detail</em></h3>
    <div class="container mt-3" :style="setBody2">
      <form action="/details" method="post" enctype="application/x-www-form-urlencoded">

          <label for="details">Investment Details</label>
          <input type = "text" name="details" class="form-control"> 
          <label for="status">Investment Status (draft/public)</label>
          <input type = "text" name="status" class="form-control"> 
          <input type = "submit" value = "SUBMIT" class = "btn btn-primary mt-2"><br>
          
      </form>
  
  
    </div>

</div>

<script>
  new Vue({
    el:'#detail',
    computed: {
        styleText: function() {
            return {
                color: 'white',
                fontSize: '6rem',
                textShadow: '3px 0 rgb(243,76,71)',
            }
        },
        setBody: function() {
            return {
                backgroundColor: '#283149',
                width: '100%',
                height: '100%',
                border: 'none',
                textAlign: 'center',
                padding: '5% auto 5% auto',
            }
        },
        setBody2: function(){
            return {
                backgroundColor: 'white',
                width: '70%',
                height: '40%',
                border: 'none',
                borderRadius: '20px',
            }
        },
        setH3: function() {
            return {
                color: 'white',
                fontSize: '2rem',
                textShadow: '2px 0 black',
            }
        },
        setInput: function(){
            return {
                width: '90%',
                height: '200px',
            }
        }
    }
})
</script>


</html>